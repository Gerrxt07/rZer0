# rZer0 Production Environment Configuration
# This file contains production-specific environment variables

# Environment
ENVIRONMENT=production

# Application Configuration
APP_NAME=rZer0
APP_VERSION=1.0.0
APP_DESCRIPTION=rZer0

# Disable API documentation in production for security
DOCS_URL=
REDOC_URL=
OPENAPI_URL=/openapi.json

# Database Configuration (PostgreSQL recommended for production)
# DATABASE_URL=postgresql://username:password@localhost:5432/rzero_prod

# Redis/Dragonfly Configuration (production cluster)
REDIS_URL=redis://localhost:6379

# Security Configuration (REQUIRED for production)
SECRET_KEY=RtvwwPZLTCIOhaUbDeoJwNTSTsjHD9eutt9TqEK4ry0

# CORS Configuration (restrict origins in production)
CORS_ALLOW_ORIGINS=https://becloudly.eu,https://jsdelivr.net
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS,HEAD,PATCH
CORS_ALLOW_HEADERS=Authorization,Content-Type,Accept,Origin,User-Agent,Cache-Control

# Security Headers Configuration (strict for production)
SECURITY_HSTS_MAX_AGE=31536000
SECURITY_HSTS_INCLUDE_SUBDOMAINS=true
SECURITY_HSTS_PRELOAD=true
SECURITY_FRAME_OPTIONS=DENY

SECURITY_CSP_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdn.jsdelivr.net; style-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com https://cdn.jsdelivr.net; img-src 'self' data: https:; connect-src 'self'; frame-ancestors 'none'; base-uri 'self'; form-action 'self'; worker-src 'self' blob:; child-src 'self' blob:

# Server Configuration (production optimized)
HOST=0.0.0.0
PORT=8000
WORKERS=1
RUNTIME_THREADS=1
BACKLOG=2048

# Logging Configuration (optimized for production)
LOG_LEVEL=INFO
LOG_DIR=logs
LOG_FILE_MAX_SIZE=50
LOG_FILE_RETENTION=30
LOG_ERROR_FILE_MAX_SIZE=25
LOG_ERROR_FILE_RETENTION=90
LOG_ENABLE_CONSOLE=false
LOG_ENABLE_FILE=true

# Async Logging Configuration (high performance for production)
LOG_ASYNC_ENABLED=true
LOG_ASYNC_FALLBACK=true
LOG_ASYNC_QUEUE_SIZE=2000
LOG_ASYNC_SHUTDOWN_TIMEOUT=5.0
