# rZer0 Development Environment Configuration# Logging Configuration (verbose for development)
LOG_LEVEL=DEBUG
LOG_DIR=logs
LOG_FILE_MAX_SIZE=5
LOG_FILE_RETENTION=3
LOG_ERROR_FILE_MAX_SIZE=2
LOG_ERROR_FILE_RETENTION=7
LOG_ENABLE_CONSOLE=true
LOG_ENABLE_FILE=trueile contains development-specific environment variables

# Environment
ENVIRONMENT=development

# Application Configuration
APP_NAME=rZer0-Dev
APP_VERSION=1.0.0-dev
APP_DESCRIPTION=rZer0 FastAPI application (Development Mode)

# Enable API documentation in development
DOCS_URL=/docs
REDOC_URL=/redoc
OPENAPI_URL=/openapi.json

# Database Configuration (SQLite for development)
# DATABASE_URL=sqlite:///./dev.db

# Redis/Dragonfly Configuration (local development)
REDIS_URL=redis://localhost:6379

# Security Configuration (not required for development)
# SECRET_KEY=dev-secret-key-not-for-production

# CORS Configuration (allow all origins in development)
CORS_ALLOW_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8080,http://127.0.0.1:8080
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS,HEAD,PATCH
CORS_ALLOW_HEADERS=*

# Security Headers Configuration (relaxed for development)
SECURITY_HSTS_MAX_AGE=0
SECURITY_HSTS_INCLUDE_SUBDOMAINS=false
SECURITY_HSTS_PRELOAD=false
SECURITY_FRAME_OPTIONS=SAMEORIGIN
# SECURITY_CSP_POLICY=default-src 'self' 'unsafe-inline' 'unsafe-eval'

# Server Configuration (development optimized)
HOST=127.0.0.1
PORT=8000
WORKERS=1
RUNTIME_THREADS=1
BACKLOG=512

# Logging Configuration (verbose for development)
LOG_LEVEL=DEBUG
LOG_DIR=logs
LOG_FILE_MAX_SIZE=5MB
LOG_FILE_RETENTION=3 days
LOG_ERROR_FILE_MAX_SIZE=2MB
LOG_ERROR_FILE_RETENTION=7 days
LOG_ENABLE_CONSOLE=true
LOG_ENABLE_FILE=true

# Async Logging Configuration (simpler for development)
LOG_ASYNC_ENABLED=false
LOG_ASYNC_FALLBACK=true
LOG_ASYNC_QUEUE_SIZE=500
LOG_ASYNC_SHUTDOWN_TIMEOUT=1.0
