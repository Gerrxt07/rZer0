# rZer0 Staging Environment Configuration
# T# Logging Configuration (detailed for staging)
LOG_LEVEL=DEBUG
LOG_DIR=logs
LOG_FILE_MAX_SIZE=20
LOG_FILE_RETENTION=14
LOG_ERROR_FILE_MAX_SIZE=10
LOG_ERROR_FILE_RETENTION=30
LOG_ENABLE_CONSOLE=true
LOG_ENABLE_FILE=truecontains staging-specific environment variables

# Environment
ENVIRONMENT=staging

# Application Configuration
APP_NAME=rZer0-Staging
APP_VERSION=1.0.0-staging
APP_DESCRIPTION=rZer0 FastAPI application (Staging Environment)

# Enable API documentation in staging for testing
DOCS_URL=/docs
REDOC_URL=/redoc
OPENAPI_URL=/openapi.json

# Database Configuration (PostgreSQL staging database)
# DATABASE_URL=postgresql://username:password@localhost:5432/rzero_staging

# Redis/Dragonfly Configuration (staging instance)
REDIS_URL=redis://localhost:6379

# Security Configuration (REQUIRED for staging)
# SECRET_KEY=STAGING_SECRET_KEY_REPLACE_WITH_SECURE_KEY

# CORS Configuration (limited origins for staging)
# CORS_ALLOW_ORIGINS=https://staging.yourdomain.com,https://test.yourdomain.com
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS,HEAD,PATCH
CORS_ALLOW_HEADERS=*

# Security Headers Configuration (moderate for staging)
SECURITY_HSTS_MAX_AGE=86400
SECURITY_HSTS_INCLUDE_SUBDOMAINS=true
SECURITY_HSTS_PRELOAD=false
SECURITY_FRAME_OPTIONS=DENY
# SECURITY_CSP_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline'

# Server Configuration (staging optimized)
HOST=0.0.0.0
PORT=8000
WORKERS=2
RUNTIME_THREADS=2
BACKLOG=1024

# Logging Configuration (detailed for staging)
LOG_LEVEL=DEBUG
LOG_DIR=logs
LOG_FILE_MAX_SIZE=20MB
LOG_FILE_RETENTION=14 days
LOG_ERROR_FILE_MAX_SIZE=10MB
LOG_ERROR_FILE_RETENTION=30 days
LOG_ENABLE_CONSOLE=true
LOG_ENABLE_FILE=true

# Async Logging Configuration (balanced for staging)
LOG_ASYNC_ENABLED=true
LOG_ASYNC_FALLBACK=true
LOG_ASYNC_QUEUE_SIZE=1000
LOG_ASYNC_SHUTDOWN_TIMEOUT=3.0
