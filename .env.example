# rZer0 Environment Configuration Template
# Copy this file to .env and modify the values as needed
## =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=DEBUG

# Log directory and file settings
LOG_DIR=logs
LOG_FILE_MAX_SIZE=10      # Maximum log file size in MB
LOG_FILE_RETENTION=7      # Log file retention period in days
LOG_ERROR_FILE_MAX_SIZE=5 # Maximum error log file size in MB
LOG_ERROR_FILE_RETENTION=30 # Error log file retention period in days

# Enable/disable logging outputs
LOG_ENABLE_CONSOLE=true
LOG_ENABLE_FILE=truepecific files:
# - .env.development (for development)
# - .env.staging (for staging)  
# - .env.production (for production)
#
# The application will automatically load the appropriate file based on ENVIRONMENT variable

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================

# Environment type: development, staging, production
ENVIRONMENT=development

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

APP_NAME=rZer0
APP_VERSION=1.0.0
APP_DESCRIPTION=A simple FastAPI application running with rloop and granian.

# API Documentation URLs (set to empty string to disable in production)
DOCS_URL=/docs
REDOC_URL=/redoc
OPENAPI_URL=/openapi.json

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database connection URL
# Examples:
# PostgreSQL: postgresql://user:password@localhost:5432/database
# MySQL: mysql://user:password@localhost:3306/database
# SQLite: sqlite:///./database.db
# DATABASE_URL=postgresql://user:password@localhost:5432/rzero

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================

# Redis/Dragonfly connection URL
REDIS_URL=redis://localhost:6379

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Secret key for JWT tokens and encryption (REQUIRED for production/staging)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
# SECRET_KEY=your-secret-key-here

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# Comma-separated list of allowed origins
# Examples:
# Development: http://localhost:3000,http://127.0.0.1:3000
# Production: https://yourdomain.com,https://www.yourdomain.com
# CORS_ALLOW_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS,HEAD,PATCH
CORS_ALLOW_HEADERS=*

# =============================================================================
# SECURITY HEADERS CONFIGURATION  
# =============================================================================

# HTTP Strict Transport Security (HSTS) configuration
SECURITY_HSTS_MAX_AGE=31536000
SECURITY_HSTS_INCLUDE_SUBDOMAINS=true
SECURITY_HSTS_PRELOAD=true

# X-Frame-Options header (DENY, SAMEORIGIN, ALLOW-FROM)
SECURITY_FRAME_OPTIONS=DENY

# Content Security Policy (CSP) header
# Example: default-src 'self'; script-src 'self' 'unsafe-inline'
# SECURITY_CSP_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline'

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server binding configuration
HOST=0.0.0.0
PORT=8000

# Process and thread configuration
WORKERS=4
RUNTIME_THREADS=4

# Socket backlog size
BACKLOG=2048

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=DEBUG

# Log directory and file settings
LOG_DIR=logs
LOG_FILE_MAX_SIZE=10MB
LOG_FILE_RETENTION=7 days
LOG_ERROR_FILE_MAX_SIZE=5MB
LOG_ERROR_FILE_RETENTION=30 days

# Enable/disable logging outputs
LOG_ENABLE_CONSOLE=true
LOG_ENABLE_FILE=true

# =============================================================================
# ASYNC LOGGING CONFIGURATION
# =============================================================================

# Asynchronous logging for high-performance (recommended for production)
LOG_ASYNC_ENABLED=true

# Fallback to synchronous logging if async queue is full
LOG_ASYNC_FALLBACK=true

# Maximum number of queued log messages (adjust based on application load)
LOG_ASYNC_QUEUE_SIZE=1000

# Timeout for graceful shutdown of async logging thread (seconds)
LOG_ASYNC_SHUTDOWN_TIMEOUT=2.0